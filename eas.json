{
  "cli": {
    "version": ">= 7.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "env": {
        "COCOAPODS_VERBOSE": "true",
        "EXPO_DEBUG": "1"
      },
      "hooks": {
        "pre-install": "bash -lc 'pod repo remove trunk || true; pod repo add trunk https://cdn.cocoapods.org/; pod repo update'",
        "post-install": "bash -lc 'cd ios && pod install --repo-update --verbose'"
      }
    },
    "preview": {
      "distribution": "internal",
      "channel": "preview"
    },
    "production": {
      "autoIncrement": true,
      "channel": "production"
    }
  },
  "submit": {
    "production": {}
  }
}
